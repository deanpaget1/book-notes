<%- include('partials/header.ejs'); -%>

    <div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog"
        id="modalSheet">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header border-bottom-0">
                    <h1 class="modal-title fs-5">Add Book Review</h1>
                    <form action="/" method="get" class="btn-close" >
                        <button type="submit" style="opacity: 0;" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </form>
                </div>
                <div class="modal-body p-5 pt-0">
                    <form action="/post" method="post">
                        <label for="floatingInput">Enter book title</label>
                        <div class="form-floating mb-3">
                            <input class="form-control rounded-3" type="text" name="title">
                        </div>
                        <label for="floatingInput">Enter Author Name</label>
                        <div class="form-floating mb-3"><input class="form-control rounded-3" type="text" name="author">
                        </div>
                        <label for="floatingInput">Enter ISBN #</label>
                        <div class="form-floating mb-3"><input class="form-control rounded-3" type="text" name="isbn">
                        </div>
                        <label for="floatingInput">Write your review</label>
                        <div class="form-floating mb-3"><textarea class="form-control rounded-3" type="text" name="review"
                                style="height: 500px;"></textarea>
                        </div>
                        <label for="floatingInput">Enter rating</label>
                        <div class="form-floating mb-3"><input class="form-control rounded-3" type="text" name="rating">
                        </div>
                        <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
                            <button type="submit" class="btn btn-lg btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <%- include('partials/footer.ejs'); -%>